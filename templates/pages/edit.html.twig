{% extends 'base.html.twig' %}

{% block title %}Hello EditBlogController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
     <form name="edit" method="post" action="{{ path('edit_p',{'id':blogs.id}) }}">
         <p><input type="text" name="pagetitle" value="{{ blogs.titlePage }}"></p>
         <p><textarea name="contentpage" >{{ blogs.contentPage }}</textarea></p>
         <p><input type="date" name="datepub" value="{{ blogs.datePub|date("Y-m-d") }}"></p>
{#         <p><input type="button" name="submit" value="Обновить"></p>#}
         <p><button name="submit">ОТправить</button> </p>
     </form>
    </div>
{% endblock %}